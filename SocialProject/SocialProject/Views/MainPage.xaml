<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:SocialProject.Views"
            x:Class="SocialProject.Views.MainPage"
            Title="{Binding Title}"
            x:Name="MainPageModel">

    <TabbedPage.Children>
        <NavigationPage Title="Login" Icon="defaultUser.png">
            <x:Arguments>
                <views:LoginPage />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="Donaciones" Icon="darRecibir.png">
            <x:Arguments>
                <views:ItemsPage />
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
</TabbedPage>